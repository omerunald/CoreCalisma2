@using System.Threading.Tasks
@model Abc.UI.Model.RegisterViewModel



@{
    Layout = "_Layout";
}

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px" class="panel-body"></div>
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon"><i class="glypicon glypicon-user"></i></span>
                    <input asp-for="UserName" class="form-control" placeholder="username" />
                    <span asp-validation-for="UserName"></span>
                </div>

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon"><i class="glypicon glypicon-user"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="password" />
                    <span asp-validation-for="Password"></span>
                </div>

              

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon"><i class="glypicon glypicon-user"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-group" style="margin-top:10px;">
                    <div class="col-sm-12 controls">

                        <input type="submit" class="btn btn-success" value="Login" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

